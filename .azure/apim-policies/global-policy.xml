<!--
    Azure API Management - Global Policy
    Applied to all APIs in the APIM instance
-->
<policies>
    <inbound>
        <!-- CORS Policy -->
        <cors allow-credentials="true">
            <allowed-origins>
                <origin>https://banxway-frontend.vercel.app</origin>
                <origin>https://banxway.vercel.app</origin>
                <origin>http://localhost:3000</origin>
                <origin>http://localhost:3001</origin>
            </allowed-origins>
            <allowed-methods>
                <method>GET</method>
                <method>POST</method>
                <method>PUT</method>
                <method>DELETE</method>
                <method>PATCH</method>
                <method>OPTIONS</method>
                <method>HEAD</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>

        <!-- Rate Limiting by IP -->
        <rate-limit-by-key calls="1000"
                           renewal-period="60"
                           counter-key="@(context.Request.IpAddress)"
                           increment-condition="@(context.Response.StatusCode >= 200 && context.Response.StatusCode < 500)" />

        <!-- Global Quota -->
        <quota-by-key calls="100000"
                      renewal-period="86400"
                      counter-key="@(context.Subscription?.Key ?? context.Request.IpAddress)" />

        <!-- Set Backend Headers -->
        <set-header name="X-Forwarded-For" exists-action="override">
            <value>@(context.Request.IpAddress)</value>
        </set-header>

        <set-header name="X-Forwarded-Host" exists-action="override">
            <value>@(context.Request.OriginalUrl.Host)</value>
        </set-header>

        <set-header name="X-Forwarded-Proto" exists-action="override">
            <value>@(context.Request.OriginalUrl.Scheme)</value>
        </set-header>

        <base />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <!-- Security Headers -->
        <set-header name="X-Content-Type-Options" exists-action="override">
            <value>nosniff</value>
        </set-header>

        <set-header name="X-Frame-Options" exists-action="override">
            <value>DENY</value>
        </set-header>

        <set-header name="X-XSS-Protection" exists-action="override">
            <value>1; mode=block</value>
        </set-header>

        <set-header name="Strict-Transport-Security" exists-action="override">
            <value>max-age=31536000; includeSubDomains</value>
        </set-header>

        <!-- Remove server headers for security -->
        <set-header name="X-Powered-By" exists-action="delete" />
        <set-header name="Server" exists-action="delete" />

        <base />
    </outbound>
    <on-error>
        <!-- Log errors -->
        <set-variable name="error" value="@{
            return new {
                message = context.LastError.Message,
                source = context.LastError.Source,
                timestamp = DateTime.UtcNow
            };
        }" />

        <!-- Return user-friendly error -->
        <return-response>
            <set-status code="500" reason="Internal Server Error" />
            <set-header name="Content-Type" exists-action="override">
                <value>application/json</value>
            </set-header>
            <set-body>@{
                return new JObject(
                    new JProperty("error", "An error occurred processing your request"),
                    new JProperty("timestamp", DateTime.UtcNow.ToString("o"))
                ).ToString();
            }</set-body>
        </return-response>

        <base />
    </on-error>
</policies>
