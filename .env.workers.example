# Worker Environment Configuration Template
# Copy this file to .env.workers and fill in the values

# ===========================================
# GENERAL CONFIGURATION
# ===========================================
NODE_ENV=production
LOG_LEVEL=info

# ===========================================
# REDIS (BullMQ Queue)
# ===========================================
REDIS_URL=redis://localhost:6379
# For Azure Redis Cache:
# REDIS_URL=rediss://:password@your-redis.redis.cache.windows.net:6380

# ===========================================
# DATABASE (Supabase)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# WORKER CONCURRENCY
# ===========================================
# Email Poller Worker
EMAIL_WORKER_CONCURRENCY=5
EMAIL_POLL_INTERVAL=30000

# WhatsApp Worker
WHATSAPP_WORKER_CONCURRENCY=10

# Transcription Worker
TRANSCRIPTION_WORKER_CONCURRENCY=3

# ===========================================
# EXOTEL (WhatsApp & Voice)
# ===========================================
EXOTEL_SID=your-exotel-sid
EXOTEL_TOKEN=your-exotel-token
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_PHONE_NUMBER=01141169368
EXOTEL_SMS_NUMBER=01141169368
EXOTEL_WHATSAPP_NUMBER=01141169368
EXOTEL_API_URL=https://api.exotel.com

# ===========================================
# OPENAI (Transcription)
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here

# ===========================================
# MONITORING (Optional)
# ===========================================
# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx

# Prometheus metrics endpoint
ENABLE_METRICS=true
METRICS_PORT=9090
