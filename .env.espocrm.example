# EspoCRM Database Configuration
ESPOCRM_DB_ROOT_PASSWORD=your_root_password_here
ESPOCRM_DB_PASSWORD=your_db_password_here

# EspoCRM Site Configuration
ESPOCRM_SITE_URL=http://localhost:8080
ESPOCRM_PORT=8080

# EspoCRM Admin Credentials
ESPOCRM_ADMIN_USERNAME=admin
ESPOCRM_ADMIN_PASSWORD=your_admin_password_here

# EspoCRM API Configuration (for Banxway integration)
ESPOCRM_API_URL=http://localhost:8080/api/v1
ESPOCRM_API_KEY=your_api_key_here
ESPOCRM_ENABLED=true

# Optional: SMTP Configuration for EspoCRM Email
ESPOCRM_SMTP_HOST=smtp.gmail.com
ESPOCRM_SMTP_PORT=587
ESPOCRM_SMTP_USERNAME=your_email@gmail.com
ESPOCRM_SMTP_PASSWORD=your_smtp_password
ESPOCRM_SMTP_SECURITY=TLS

# Optional: phpMyAdmin Configuration
PHPMYADMIN_PORT=8081

# Webhook Configuration (for Banxway to receive EspoCRM updates)
ESPOCRM_WEBHOOK_SECRET=your_webhook_secret_here
